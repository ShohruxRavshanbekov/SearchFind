    <!-- SemiBold 600 -->

    <style name="Theme.App.Starting" parent="Theme.SearchFind">
        <item name="android:windowSplashScreenBackground" tools:ignore="NewApi">
            @color/primary
        </item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:ignore="NewApi">
            @drawable/app_logo_for_splash
        </item>
        <!--        <item name="postSplashScreenTheme">@style/Theme.SearchFind</item>-->
    </style>

    <style name="HeaderText" parent="Theme.SearchFind">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/textSize20</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:padding">@dimen/padding1</item>
    </style>

    <style name="HeaderText2" parent="Theme.SearchFind">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/textSize16</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/padding1</item>
    </style>

    <style name="ButtonPrimary" parent="Theme.SearchFind">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">@dimen/margin16</item>
        <item name="cornerRadius">@dimen/cornerRadius16</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationItemTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationItemTextAppearance</item>
        <item name="itemActiveIndicatorStyle">@style/BottomNavigationActiveItemStyle</item>
    </style>

    <style name="BottomNavigationItemTextAppearance">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="BottomNavigationActiveItemStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary</item>
    </style>

    <style name="CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="CornerSize16" parent="">
        <item name="cornerSize">@dimen/cornerRadius16</item>
    </style>

    <style name="CornerSize8" parent="">
        <item name="cornerSize">@dimen/cornerRadius8</item>
    </style>

    <style name="FabStyle" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayFAB</item>
        <item name="elevation">@dimen/elevation1</item>
    </style>

    <style name="ShapeAppearanceOverlayFAB" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:backgroundTint">@color/screen_background</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>